{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "declaration": true,
      "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": [
      "node_modules",
      "**/*.test.ts",
      "dist",
      "src/old_code",
      "**/*-copy.ts",
      "**/*_copy.ts",
      "**/*-copy*.ts",
      "**/*_copy*.ts"
    ]
  }